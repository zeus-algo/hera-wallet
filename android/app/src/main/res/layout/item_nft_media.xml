<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintDimensionRatio="1:1">

    <network.voi.hera.customviews.collectibleimageview.CollectibleImageView
        android:id="@+id/nftMediaImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/threeDModeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@drawable/bg_collectible_badge"
        android:drawablePadding="@dimen/spacing_xsmall"
        android:gravity="center"
        android:paddingHorizontal="@dimen/spacing_xsmall"
        android:paddingVertical="@dimen/spacing_xxsmall"
        android:text="@string/three_d_mode"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_3d_cube"
        app:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/nftMediaImageView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fullScreenImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@drawable/bg_collectible_badge"
        android:padding="@dimen/spacing_xxsmall"
        app:layout_constraintBottom_toBottomOf="@id/nftMediaImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_full_view"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>

